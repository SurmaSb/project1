pipeline {
    agent any
     image 'node:6-alpine' 
            args '-p 3000:3000' 

    environment {
        CI = 'true'
    }

    stages {
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }

        stage('Deliver') { 
            steps {
               sh 'set -x'
                sh 'nohup npm start > log.txt&'
                sh 'sleep 1'
                sh 'echo $! > .pidfile'
                sh 'set +x'
            }
        }
    }
}
