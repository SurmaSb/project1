pipeline {
    agent any

    environment {
        CI = 'true'
    }

    stages {
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }

        stage('Deliver') { 
            steps {
               sh for pid in 
                   $(pidof -o %PPID -x progd); do
                   kill -TERM $pid
                     done
               sh 'set -x'
                sh 'nohup npm start > log.txt&'
                sh 'sleep 1'
                sh 'echo $! > .pidfile'
                sh 'set +x'
            }
        }
    }
}
