pipeline {
    agent any

    environment {
        CI = 'true'
    }

    stages {
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }

        stage('Deliver') { 
            steps {
                
                sh 'set -x #echo on'
                sh 'nohup npm start > log.txt&'
                sh 'sleep 1'
                sh 'echo $! > .pidfile'
                sh 'set +x'
                sh './jenkins/scripts/deliver.sh' 
                input message: 'Finished using the web site? (Click "Proceed" to continue)' 
                sh './jenkins/scripts/kill.sh'
            }
        }
    }
}
